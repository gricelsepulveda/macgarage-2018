              img src="../assets/img/device-01.png" title="iphone" alt="iphone"
              h2.text-center iPhone
          /! MACBOOK
          li.mg-device
            a.flex.col.center href=""
              img src="../assets/img/device-02.png" title="macbook pro" alt="macbook pro"
              h2.text-center Macbook
          /! IMAC
          li.mg-device
            a.flex.col.center href=""
              img src="../assets/img/device-03.png" title="imac" alt="imac"
              h2.text-center iMac
          /! IPAD
          li.mg-device
            a.flex.col.center href=""
              img src="../assets/img/device-04.png" title="ipad" alt="ipad"
              h2.text-center iPad
          /! OTROS
          li.mg-device
            a.flex.col.center href=""
              img src="../assets/img/device-05.png" title="dispositivos apple" alt="dispositivos apple"
              h2.text-center Otro
      
      /! SECTION RATE & FEEDBACK
